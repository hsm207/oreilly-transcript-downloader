{
  "manifest_version": 3,
  "name": "O'Reilly Transcript Downloader",
  "version": "1.0.0",
  "description": "Download transcripts from O'Reilly video pages.",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": ["tabs", "webRequest"],
  "host_permissions": ["https://event.on24.com/*"],
  "content_scripts": [
    {
      "matches": [
        "https://learning.oreilly.com/videos/*",
        "https://learning.oreilly.com/library/view/*",
        "https://event.on24.com/*"
      ],
      "js": ["src/contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}

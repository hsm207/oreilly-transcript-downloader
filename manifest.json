{
  "manifest_version": 3,
  "name": "O'Reilly Transcript Downloader",
  "version": "1.0",
  "description": "Download transcripts from O'Reilly online learning platform videos.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://learning.oreilly.com/videos/*"
      ],
      "js": [
        "src/extractTranscript.js",
        "src/extractTOC.js",
        "src/content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}